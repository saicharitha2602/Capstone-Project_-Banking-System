@page
@model BankingProject.Pages.Users.RegisterModel
@{
}
<head>
    <style>
         body {
 background-color:aquamarine !important;
  
}
</style>
     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BankingProject.styles.css" asp-append-version="true" />
</head>
@if (Model.success_msg.Length>0)
{
   <div>
       <div class="row-cols-1">
       <div class="alert alert-success alert-dismissible">
                @Model.success_msg
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
       </div>
       </div>
   </div>
}
@if (Model.error_msg.Length > 0)
{
   <div>
        <div class="row-cols-1">
            <div class="alert alert-danger alert-dismissible">
                @Model.error_msg
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    </div>
}
<body>
<h2>User Regsitration</h2>

<form method="post">

<div class="row-cols-4" align="center">
        <label class="col-form-label">Fullname  </label>
        <div>
        <input type="text" class=" form-control" name="fullname" value="" required></input>
        </div>
        <label class="col-form-label">Email ID  </label>
        <div>
            <input type="email" class=" form-control" name="email_id" value="" required></input>
        </div>
        <label class="col-form-label">Phone Number  </label>
        <div>
            <input type="number" class=" form-control" name="phno" value="" required></input>
        </div>
        <label class="col-form-label">Account No</label>
        <div>
            <input type="number" class=" form-control" name="acc_no" value="" required></input>
        </div>
         <label class="col-form-label">Account Type</label>
         <div>
    <select class="col-form-label" name="acc_type" id="acc_type">
        <option value="current">Current</option>
  <option value="savings">Savings</option>
  <option value="primary">Primary</option>
  <option value="fixed">Fixed</option>
 
</select>
</div>
         <label class="col-form-label">Balance</label>
        <div>
            <input type="number" class=" form-control" name="balance" value="" required></input>
        </div>
         <label class="col-form-label">Username</label>
        <div>
            <input type="text" class=" form-control" name="username" value="" required></input>
        </div>
         <label class="col-form-label">Password</label>
        <div>
            <input type="password" class=" form-control" name="password" value="" required></input>
        </div>
        <br>
       <div>
            <button type="submit" class="btn btn-success">Submit</button>
            <button type="reset" class="btn btn-primary">Reset</button>
           <br><br>
           <a href="/Users/Login" >Login from here!!</a>
        </div>
        </div>
        </form>
        </body>